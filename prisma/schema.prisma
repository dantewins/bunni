datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  name         String?
  image        String?
  hasCompletedSetup Boolean @default(false)
  notionUserId String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  notion       NotionConnection?
  canvas CanvasConnection?
}

model NotionConnection {
  userId            String   @id @map("user_id")
  accessToken       String   @map("access_token")
  refreshToken      String?  @map("refresh_token")
  expiresAt         DateTime? @map("expires_at")
  workspaceId       String?  @map("workspace_id")
  botId             String?  @map("bot_id")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  parentPageId      String?  @map("parent_page_id")
  calendarDatabaseId String? @map("calendar_database_id")
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notion_connections")
}

model CanvasConnection {
  userId String @id @map("user_id")
  baseUrl String @map("base_url")
  apiKey String @map("api_key")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("canvas_connections")
}